<Window x:Class="BiografProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:biografProjekt="clr-namespace:BiografProjekt"
        mc:Ignorable="d"
        Title="BiografProjekt">
    <!-- Baggrundsfarve -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Source={x:Static biografProjekt:DomainModel.Instance} }"></ListBox>
        <TextBox Grid.Column="0" Text="{Binding Source={x:Static biografProjekt:DomainModel.Instance}, Path=Movies.GetAllMovie, Mode=OneTime}"></TextBox>
        <TextBox Grid.Column="1" Text="{Binding Source={x:Static biografProjekt:DomainModel.Instance}, Path=Screens.GetAllScreens, Mode=OneTime}"></TextBox>
        <TextBox Grid.Column="2" Text="{Binding Source={x:Static biografProjekt:DomainModel.Instance}, Path=Shows.GetAllShows, Mode=OneTime}"></TextBox>
        <TextBox Grid.Column="3" Text="{Binding Source={x:Static biografProjekt:DomainModel.Instance}, Path=Movies.RunningTime, Mode=OneTime}"></TextBox>
    </Grid>
</Window>